
[TopLeftWindow
  Type="Box"
  Size=900,700
  Position=100, 100
  Color=128,128
  OnMouseButton(int state, int x, int y, int button) = [Function
    "OnMouseButton called! Parameters are: ", state, " ", x, " ", y, " ", button
    Color[0] = 0
    Children.InnerBox.Color[0] = 255
  ]
  OnMouseMove(int x, int y) = [Function
    "TopLeftWindow ", x, " ", y
  ]

  [Children
    [InnerBox
      Type="Box"
      Size=100,100
      Position=100,100
      Color=0
      OnMouseMove(int x, int y) = [Function
        "InnerBox!"
      ]
    ]
  ]
]

